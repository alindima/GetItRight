<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.MainActivityFragment">

    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:layout_weight="1">
        <Button android:layout_height="wrap_content" android:layout_width="match_parent"
            android:id="@+id/playBtn" android:text="@string/play_button" />

        <Button android:layout_height="wrap_content" android:layout_width="match_parent"
            android:id="@+id/highscoresBtn" android:text="@string/highscores_button" />
    </LinearLayout>

    <LinearLayout android:gravity="bottom" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:layout_weight="1">
        <Button android:layout_height="wrap_content" android:layout_width="match_parent"
            android:id="@+id/exitBtn" android:text="@string/exit_button" />
    </LinearLayout>

</LinearLayout>